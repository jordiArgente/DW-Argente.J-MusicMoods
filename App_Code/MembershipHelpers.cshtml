@helper AccountSummary()
{
    if(WebSecurity.IsAuthenticated){
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @WebSecurity.CurrentUserName<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="@Href("~/logout")"><i class="fa fa-fw fa-power-off"></i> Salir</a>
                </li>
            </ul>
    }else{
        Response.Redirect("~/login");
    }
}